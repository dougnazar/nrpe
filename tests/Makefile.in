# Makefile for nrpe tests using perl

srcdir=@srcdir@
builddir=@builddir@
abs_top_builddir=@abs_top_builddir@


all: 

test: configs checks
	@[ -d logs ] || mkdir logs
	@[ -d run ] || mkdir run
	prove $(srcdir)/*.t :: $(abs_top_builddir)

configs: $(srcdir)/configs
	ln -sfn $? $@

checks: $(srcdir)/checks
	ln -sfn $? $@

clean:
	rm -rf logs run
	[ -h configs ] && rm configs || true
	[ -h checks ] && rm checks || true

distclean: clean
	rm -f Makefile
